<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="InvariantMassPlotter" config="" nodePath="InvariantMassPlotter" />
	<Logger color="true" globalLogLevel="all" />
	
	<InvariantMassPlotter >
		<Logger color="true" globalLogLevel="trace" />
		<EventLoop progress="true" />

		<input>
			<dst treeName="FemtoDst" url="muon_femto.root" splitBy="200" nEvents="200000000"/>
		</input>

		<output path="" >
			<data>mumu.root</data>
		</output>

		<histograms>
			<Histo name="like_sign" title="like sign" bins_x="bins.invMass" />
			<Histo name="like_sign_pT" title="like sign" bins_x="bins.invMass" bins_y="bins.pT" />
			<Histo name="unlike_sign" title="unlike sign" bins_x="bins.invMass" />
		</histograms>

		<Particles mass1="0.105" mass2="0.105" />

	</InvariantMassPlotter>

	<bins>
		<invMass width="0.1" min="0.0" max="5.0" />
		<pT width="0.1" min="0.0" max="5.0" />
	</bins>

</config>