<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="MuonCandidateMaker" config="" nodePath="MuonCandidateMaker" />
	<Logger color="true" globalLogLevel="trace" />
	
	<MuonCandidateMaker event="true" track="true" triggers="" rmc="false">
		<Logger color="true" globalLogLevel="info" />

		<input>
			<dst treeName="PicoDst" url="list.lis" splitBy="200" maxFiles="20" />
		</input>

		<output path="" >
			<data>muon_candidates.root</data>
		</output>

		<histograms>
			<Include url="../Common/EventQAHistos.xml" />
		</histograms>
		
		<Include url="../Common/EventCuts.xml" />
		<Include url="../Common/MuonCandidateCuts.xml" />

		<EventBranches>
			Event,
			EventPlane
		</EventBranches>

		<TrackBranches>
			Tracks,
			BTofPidTraits,
			EmcPidTraits,
			MtdPidTraits
		</TrackBranches>

	</MuonCandidateMaker>

	<Include url="../Common/EventQABins.xml" />

</config>