<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="MuonCandidateMaker" config="" nodePath="MuonCandidateMaker" />
	<Logger color="true" globalLogLevel="trace" />
	
	<Include url="../Common/cwd.xml" />
	<MuonCandidateMaker event="true" track="true" triggers="dimuon" rmc="true">
		<Logger color="true" globalLogLevel="info" />

		<input>
			<dst treeName="PicoDst" url="list.lis" splitBy="200" />
		</input>

		<output path="" >
			<TFile url="muon_candidates_{jobIndex}.root" />
			<!-- <data>muon_candidates.root</data> -->
		</output>

		<histograms>
			<Include url="../Common/EventQAHistos.xml" />
		</histograms>
		
		<Include url="../Common/EventCuts.xml" />
		<Include url="../Common/MuonCandidateCuts.xml" />
		
		<!-- Parameter imports -->
		<Include url="../Params/EventPlaneCorr.xml" />

		<EventBranches>
			Event,
			EventPlane
		</EventBranches>

		<TrackBranches>
			Tracks,
			MtdPidTraits
		</TrackBranches>

	</MuonCandidateMaker>

	<Include url="../Common/EventQABins.xml" />

</config>