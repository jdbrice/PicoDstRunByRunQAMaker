	<R url="../Common/{R:active}/" active="Run14_AuAu_200_Mtd" />
	<Include url="{R:url}/cwd.xml" />

	<InvMP >
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="true" />
		<MakeQA event="true" track="true" />

		<input>
			<dst treeName="FemtoDst" url="{CWD:out}/filelists/MuonCandidates.lis" splitBy="5" nEvents="-1"/>
		</input>

		<output path="" >
			<TFile url="{CWD:out}/SameEventMuMuPairs/inv_mass_mumu_{jobIndex}_{InvMP.EventHash}.root" />
		</output>

		<histograms>
			<!-- <Include url="../Common/dimuonHistos.xml" /> -->
