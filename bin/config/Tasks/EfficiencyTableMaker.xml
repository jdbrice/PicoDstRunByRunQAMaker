<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="Eff Table Maker" type="EfficiencyTableMaker" config="" nodePath="ETM" />
	<Logger color="true" globalLogLevel="warning" />
	
	<R url="../Common/{R:active}/" active="Run15_PP_200_Mtd" />
	<Include url="{R:url}/cwd.xml" />

	<ETM>
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="true" />

		<input>
			<dst treeName="EmbedTree" url="{CWD:in}/filelists/Embedding.lis" splitBy="100" nEvents="-1" maxFiles="-1"/>
			
		</input>

		<output path="" >
			<TFile url="{CWD:out}/Params/tracking_efficiency.root" />
		</output>

		<histograms>

			<Histo name="eLoss" title=";p_{T}^{MC} [GeV/c]; p_{T}^{RC} - p_{T}^{MC} [GeV/c]" bins_x="EffBins.pTLoss" bins_y="EffBins.dpTLoss" />

			<Histo name="mc_eta_vs_pT" title="MC;pT [GeV/c];#eta" bins_y="EffBins.eta" bins_x="EffBins.pT" />
			<Histo name="rc_eta_vs_pT" title="MC;pT [GeV/c];#eta" bins_y="EffBins.eta" bins_x="EffBins.pT" />
			<Histo name="mtd_eta_vs_pT" title="MC;pT [GeV/c];#eta" bins_y="EffBins.eta" bins_x="EffBins.pT" />

			<Histo name="mc_eta_vs_phi" title="MC;#phi;#eta" bins_y="EffBins.eta" bins_x="EffBins.phi" />
			<Histo name="rc_eta_vs_phi" title="MC;#phi;#eta" bins_y="EffBins.eta" bins_x="EffBins.phi" />
			<Histo name="mtd_eta_vs_phi" title="MC;#phi;#eta" bins_y="EffBins.eta" bins_x="EffBins.phi" />

			<!-- <Histo name="mc_eta_vs_phi" title="MC;#phi;#eta" bins_y="EffBins.eta" bins_x="EffBins.phi" />
			<Histo name="rc_eta_vs_phi" title="MC;#phi;#eta" bins_y="EffBins.eta" bins_x="EffBins.phi" />
			<Histo name="mtd_eta_vs_phi" title="MC;#phi;#eta" bins_y="EffBins.eta" bins_x="EffBins.phi" /> -->

			<Histo name="mc_phi_vs_pT" title="MC;pT [GeV/c];#phi" bins_y="EffBins.phi" bins_x="EffBins.pT" />
			<Histo name="rc_phi_vs_pT" title="MC;pT [GeV/c];#phi" bins_y="EffBins.phi" bins_x="EffBins.pT" />
			<Histo name="mtd_phi_vs_pT" title="MC;pT [GeV/c];#phi" bins_y="EffBins.phi" bins_x="EffBins.pT" />

			<Histo name="module" title="module" bins_x="EffBins.module" />

			<Histo name="uls_mc_dEta_vs_dPhi" title="MC;#Delta#phi;#Delta#eta" bins_x="EffBins.dPhi" bins_y="EffBins.dEta" />
			<Histo name="uls_rc_dEta_vs_dPhi" title="MC;#Delta#phi;#Delta#eta" bins_x="EffBins.dPhi" bins_y="EffBins.dEta" />
			<Histo name="uls_mtd_dEta_vs_dPhi" title="MC;#Delta#phi;#Delta#eta" bins_x="EffBins.dPhi" bins_y="EffBins.dEta" />

			<Histo name="ls_mc_dEta_vs_dPhi" title="MC;#Delta#phi;#Delta#eta" bins_x="EffBins.dPhi" bins_y="EffBins.dEta" />
			<Histo name="ls_rc_dEta_vs_dPhi" title="MC;#Delta#phi;#Delta#eta" bins_x="EffBins.dPhi" bins_y="EffBins.dEta" />
			<Histo name="ls_mtd_dEta_vs_dPhi" title="MC;#Delta#phi;#Delta#eta" bins_x="EffBins.dPhi" bins_y="EffBins.dEta" />

			<Histo name="uls_mc_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />
			<Histo name="uls_rc_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />
			<Histo name="uls_mtd_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />
			<Histo name="uls_tp_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />

			<Histo name="ls_mc_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />
			<Histo name="ls_rc_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />
			<Histo name="ls_mtd_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />
			<Histo name="ls_tp_pT_vs_m" title="MC;M_{#mu#mu} [GeV/c^{2}];pT [GeV/c]" bins_x="EffBins.mass" bins_y="EffBins.pT" />


		</histograms>
		
	</ETM>

	<EffBins>
		<phi width="0.02" min="-3.2" max="3.2" />
		<pT width="0.25" min="-10.0" max="10.0" />
		<mass width="0.05" min="0.0" max="10.0" />
		<pTLoss width="0.005" min="0.0" max="5.0" />
		<dpTLoss width="0.005" min="-1.0" max="1.0" />
		<eta width="0.2" min="-1.6" max="1.6" />

		<dEta width="0.1" min="-1.6" max="1.6" />
		<dPhi width="0.02" min="-3.2" max="3.2" />

		<module width="1" min="-2" max="8"/>
	</EffBins>

</config>