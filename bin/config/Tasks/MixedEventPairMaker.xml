<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="MMTM" type="MixedEventPairMaker" config="" nodePath="MEMuons" />
	<Logger color="true" globalLogLevel="warn" />
	
	<R url="../Common/{R:active}/" active="Run14_AuAu_200_Mtd" />
	<Include url="{R:url}/cwd.xml" />

	<MEMuons event="true" track="true" triggers="">
		<Logger color="true" globalLogLevel="debug" />
		<EventLoop progress="true" />
		<Mixing max="2400" nPerEventHash="50" />
		<input>
			<dst treeName="FemtoDst" url="{CWD:out}/filelists/MuonCandidates.lis" splitBy="100"/>
		</input>

		<output>
			<TFile url="{CWD:out}/MixedEventMuMuPairs/mixed_muon_pairs_{jobIndex}.root" />
		</output>

		<Include url="{R:url}/MixedEventBins.xml" />
		<Include url="{R:url}/SameEventPairCuts.xml" />
		<Include url="{R:url}/MuonCandidateCuts.xml" />

		<histograms>
			<Histo name="EventHash" title="EventHash" bins_x="bins.EventHash"/>
			<Histo name="EventHashN" title="EventHashN" bins_x="bins.EventHash"/>
		</histograms>

	</MEMuons>

	<bins>
		<EventHash width="1" min="0" max="2400" />
	</bins>

</config>