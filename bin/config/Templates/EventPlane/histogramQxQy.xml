<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="EventPlaneHistoMaker" config="" nodePath="EventPlaneHistoMaker" />
	<Logger color="true" globalLogLevel="all" />
	
	<Include url="../Common/cwd.xml" />
	<EventPlaneHistoMaker triggers="">
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="false" />

		<input>
			<dst treeName="FemtoDst" url="femtoEventPlane.lis" splitBy="64" nEvents="20000000"/>
		</input>

		<output path="" >
			<TFile url="{CWD:out}EventPlane_{jobIndex}.root" />
		</output>

		<histograms>
			<Include url="../Common/EventQAHistos.xml" />
			<Include url="EventPlaneQAHistos.xml" />

			
			<Histo name="QxQyCentered" title="Centered QxQy" bins_x="bins.Qx" bins_y="bins.Qy" />
			<Histo name="Psi" title="psi" bins_x="bins.Psi" />
			<Histo name="PsiCentered" title="Centered psi" bins_x="bins.Psi" />
			<Histo name="QxQy" title="QxQy" bins_x="bins.Qx" bins_y="bins.Qy" />
		</histograms>
		
		<Include url="../Common/EventCuts.xml" />
		
		<Include url="../Params/EventPlaneCorr.xml" />


	</EventPlaneHistoMaker>

	<Include url="../Common/EventQABins.xml" />
	<Include url="EventPlaneQABins.xml" />

	<bins>
		<Qx width="0.002" min="-1" max="1" />
		<Qy width="0.002" min="-1" max="1" />
		<Psi width="0.01" min="-3.2" max="3.2" />
	</bins>

</config>