<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="ElectronMuonCandidateMaker" config="" nodePath="ElectronMuonCandidateMaker" />
	<Logger color="true" globalLogLevel="all" />
	
	<ElectronMuonCandidateMaker event="true" track="true" triggers="singlemu">
		<Logger color="true" globalLogLevel="info" />

		<input>
			<dst treeName="PicoDst" url="list.lis" splitBy="200" nEvents="2000000"/>
		</input>

		<output path="" >
			<data>emu_candidates.root</data>
		</output>

		<histograms>
			<Include url="../Common/EventQAHistos.xml" />
		</histograms>
		
		<Include url="../Common/EventCuts.xml" />
		<Include url="../Common/MuonCandidateCuts.xml" />
		<Include url="../Common/ElectronCandidateCuts.xml" />

		<EventBranches>
			Event,
			EventPlane
		</EventBranches>

		<TrackBranches>
			Tracks,
			BTofPidTraits,
			EmcPidTraits,
			MtdPidTraits
		</TrackBranches>

	</ElectronMuonCandidateMaker>

	<Include url="../Common/EventQABins.xml" />

</config>