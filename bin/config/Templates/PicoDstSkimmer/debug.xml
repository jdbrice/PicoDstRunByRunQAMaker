<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="PicoDstSkimmer" config="" nodePath="PicoDstSkimmer" />
	<Logger color="true" globalLogLevel="all" />
	
	<PicoDstSkimmer event="true" track="true" triggers="">
		<Logger color="true" globalLogLevel="trace" />

		<input>
			<dst treeName="PicoDst" url="list.lis" splitBy="200" nEvents="200000"/>
		</input>

		<output path="" >
			<data>skimmer.root</data>
		</output>

		<histograms>
			<Include url="../Common/EventQAHistos.xml" />
		</histograms>
		
		<Include url="../Common/EventCuts.xml" />

		<EventBranches>
			Event,
			EventPlane
		</EventBranches>

		<TrackBranches>
			Tracks,
			BTofPidTraits,
			EmcPidTraits,
			MtdPidTraits
		</TrackBranches>

	</PicoDstSkimmer>

	<Include url="../Common/EventQABins.xml" />

</config>