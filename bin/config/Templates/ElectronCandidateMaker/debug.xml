<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="ElectronCandidateMaker" config="" nodePath="ElectronCandidateMaker" />
	<Logger color="true" globalLogLevel="all" />
	
	<ElectronCandidateMaker event="true" track="true" triggers="">
		<Logger color="true" globalLogLevel="info" />

		<input>
			<dst treeName="PicoDst" url="list.lis" splitBy="200" nEvents="100000"/>
		</input>

		<output path="" >
			<data>electron_candidates.root</data>
		</output>

		<EventLoop progress="true" />

		<histograms>
			<Include url="../Common/EventQAHistos.xml" />
			<Include url="../Common/TrackQAHistos.xml" />
		</histograms>
		
		<Include url="../Common/EventCuts.xml" />
		<Include url="../Common/TpcTofElectronCandidateCuts.xml" />

		<EventBranches>
			Event,
			EventPlane
		</EventBranches>

		<TrackBranches>
			Tracks,
			BTofPidTraits,
			EmcPidTraits,
			MtdPidTraits
		</TrackBranches>

	</ElectronCandidateMaker>

	<Include url="../Common/EventQABins.xml" />
	<Include url="../Common/TrackQABins.xml" />

</config>