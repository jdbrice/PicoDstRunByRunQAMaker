<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="InvariantMassPlotter" config="" nodePath="InvMP" />
	<Logger color="true" globalLogLevel="all" />
	
	<Include url="./Common/cwd.xml" />
	<InvMP >
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="true" />

		<input>
			<dst treeName="FemtoDst" url="{CWD:out}/filelists/MuonCandidates.lis" />
		</input>

		<output path="" >
			<TFile url="{CWD:out}/inv_mass_mumu_{InvMP.EventHash}.root" />
		</output>

		<histograms>
			<Include url="./Common/dimuonHistos.xml" />
		</histograms>

		<Particles mass1="0.105" mass2="0.105" />

		<Include url="./Common/MuonCandidateCuts.xml" />
		<Include url="./Common/MixedEventBins.xml" />

	</InvMP>

	<Include url="./Common/dimuonBins.xml" />

</config>
