<?xml version="1.0" encoding="UTF-8"?>
<config>

	<!-- TASKS -->
	<Task name="skimmer" type="CandidatePairCSVExporter" config="" nodePath="PairCSV" />

	<Logger color="true" globalLogLevel="info" />
	
	<Include url="./Common/cwd.xml" />
	<PairCSV >
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="true" />
		<input>
			<dst treeName="FemtoDst" url="{CWD:out}/filelists/MuonCandidates.lis" />
		</input>

		<keepAll>false</keepAll>
		<output path="" >
			<File url="{CWD:out}/SameEventPairs_Train.csv" />
		</output>

		<Include url="./Common/MuonCandidateCuts.xml" />
		<Include url="./Common/SameEventPairCuts.xml" />
		<Include url="./Common/MixedEventBins.xml" />

	</PairCSV>

</config>
