<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="MuonCandidateMaker" config="" nodePath="MuonCandidateMaker" />
	<Logger color="true" globalLogLevel="trace" />
	
	<Include url="./Common/cwd.xml" />


	<MuonCandidateMaker event="true" track="true" triggers="" rmc="false">
		<Logger color="true" globalLogLevel="info" />
		<MakeQA event="true" track="true" />
		<EventLoop progress="true" />
		
		<EventHash split="true" min="0" max="200" url="{CWD:out}MuonCandidates/muon_candidates_Tree_{jobIndex}.root" />

		<input>
			<dst treeName="PicoDst" adapter="PicoDstRun15PP200" url="{CWD:in}/filelists/PicoDst.lis" splitBy="200" />
		</input>

		<output path="" >
			<TFile url="{CWD:out}MuonCandidates/QA/muon_candidates_QA_{jobIndex}.root" />

		</output>

		<histograms>
			<Include url="./Common/EventQAHistos.xml" />
		</histograms>
		
		<Include url="./Common/EventCuts.xml" />
		<Include url="./Common/LooseMuonCandidateCuts.xml" />
		<Include url="./Common/MixedEventBins.xml" />

		<EventBranches>
			Event
		</EventBranches>

		<TrackBranches>
			Tracks,
			MtdPidTraits
		</TrackBranches>

	</MuonCandidateMaker>

	<Include url="./Common/EventQABins.xml" />

</config>