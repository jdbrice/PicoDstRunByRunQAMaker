<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="Muon Candidate QA" type="MuonCandidateQA" config="" nodePath="MuonQA" />
	<Logger color="true" globalLogLevel="all" />
	
	<DataSet>Run15PP</DataSet>

	<Include url="../{DataSet}/Common/cwd.xml" />
	<MuonQA>
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="true" />
		
		<input>
			<dst splitBy="22" treeName="FemtoDst" url="{CWD:out}/filelists/MuonCandidates.lis" nEvents="-1"/>
		</input>

		<output>
			<TFile url="{CWD:out}/QA/MuonCandidates{mod}_{jobIndex}.root" />
		</output>

		<!-- <histograms>
			<Include url="./Common/TrackQAHistos.xml" />	
		</histograms> -->

		<TrackCuts>
			<Range name="rigidity" min="-1000" max="1000" />
		</TrackCuts>

	</MuonQA>

	<Include url="./TrackQABins.xml" />
	<Include url="./EventQABins.xml" />

</config>