	</Plot>



	<Plot>
		<Margins left="0.15" right="0.025" top="0.1" bottom="0.15" />
		<Histo name="raw_signal" data="d1" >
			<style draw="E1" optstat="0" xr="0, 4.3" c="black" logy="1" title="Au+Au #sqrt{{s_{{NN}} }}=200GeV; M_{{#mu#mu}} [GeV/c^{{2}}]; dN/dM_{{#mu#mu}} [c^{{2}}/GeV]" yto="1.3" />
