<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="VegaXmlPlotter" config="" nodePath="" />

	<Include url="../Common/cwd.xml" />

	<Data name="d1" url="{CWD:out}/InvMassMuMu/bg_inv_mass_mumu.root" />
