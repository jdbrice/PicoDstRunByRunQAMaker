<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="MMTM" type="MixedEventTreeMaker" config="" nodePath="MixedEventTreeMaker" />
	<Logger color="true" globalLogLevel="warning" />
	
	<Include url="./Common/cwd.xml" />
	<MixedEventTreeMaker event="true" track="true" triggers="" split="true">
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="true" />

		<EventHash>{ANA_EVENT_HASH}</EventHash>

		<input>
			<dst treeName="FemtoDst" url="{CWD:out}/filelists/MuonCandidates.lis" splitBy="3"/>
		</input>

		<output>
			<TFile url="{CWD:out}/MixedMuonCandidates/mixed_muon_candidates_{MixedEventTreeMaker.EventHash}_{jobIndex}.root" />
		</output>

		<Include url="./Common/MixedEventBins.xml" />

	</MixedEventTreeMaker>

</config>