<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="MMTM" type="MixedEventPairMaker" config="" nodePath="MEMuons" />
	<Logger color="true" globalLogLevel="warn" />
	
	<Include url="./Common/cwd.xml" />

	<MEMuons event="true" track="true" triggers="">
		<Logger color="true" globalLogLevel="info" />
		<EventLoop progress="true" />
		<Mixing max="2600" nPerEventHash="20" />

		<input>
			<dst treeName="FemtoDst" url="{CWD:out}/filelists/MuonCandidates.lis" splitBy="22"/>
		</input>

		<output>
			<TFile url="{CWD:out}/MixedEventMuMuPairs/mixed_muon_pairs_{jobIndex}.root" />
		</output>

		<Include url="./Common/MixedEventBins.xml" />
		<Include url="./Common/SameEventPairCuts.xml" />
		<Include url="./Common/MuonCandidateCuts.xml" />

		<histograms>
			<Histo name="EventHash" title="EventHash" bins_x="bins.EventHash"/>
			<Histo name="EventHashN" title="EventHashN" bins_x="bins.EventHash"/>
		</histograms>

	</MEMuons>

	<bins>
		<EventHash width="1" min="0" max="2600" />
	</bins>

</config>