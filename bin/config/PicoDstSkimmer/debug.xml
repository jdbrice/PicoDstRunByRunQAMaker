<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="skimmer" type="PicoDstSkimmer" config="" nodePath="PicoDstSkimmer" />
	<Logger color="true" globalLogLevel="all" />
	
	<PicoDstSkimmer event="true" track="true" triggers="emu">
		<Logger color="true" globalLogLevel="info" />

		<input>
			<dst treeName="PicoDst" url="list.lis" splitBy="200" nEvents="200000"/>
		</input>

		<output path="" >
			<data>skimmer.root</data>
		</output>


		<histograms>
			<EventQAHistos>
				<Histo name="event_cuts" title="Sequential Event Cuts" bins_x="bins.event_cuts" />
				<Histo name="event_single_cuts" title="Individual Event Cuts" bins_x="bins.event_cuts" />
			</EventQAHistos>
		</histograms>
		

		<EventCuts>
			<zVertex min="-100" max="100" />
			<zVertexDelta min="0" max="3" />
		</EventCuts>

		<EventBranches>
			Event,
			EventPlane
		</EventBranches>

		<TrackBranches>
			Tracks,
			BTofPidTraits,
			EmcPidTraits,
			MtdPidTraits
		</TrackBranches>

	</PicoDstSkimmer>

	<bins>
		<event_cuts width="1" min="0" max="8" />
	</bins>
</config>