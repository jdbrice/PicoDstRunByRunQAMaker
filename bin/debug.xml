<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Task name="PicoDstQAMaker" type="RunByRunQAMaker" config="" nodePath="RunByRunQAMaker" />

	<Logger color="true" globalLogLevel="info" />
	

	<RunByRunQAMaker event="true" track="true" noRunMap="true">
		<Logger color="true" globalLogLevel="info" />

		<input>
			<dst treeName="PicoDst" url="list.lis" maxFiles="10000" nEvents="200000"/>
		</input>

		<DataSource>
			<BranchStatus status="0">*</BranchStatus>
			<!-- Turn on only the ones you need -->
			<BranchStatus status="1">
				Event*,
				Tracks*,
				BTofPidTraits*,
				MtdPidTraits*
			</BranchStatus>
		</DataSource>

		<output path="qa/" >
			<data>qa.root</data>
		</output>


		<Include url="config/histograms.xml" />

	</RunByRunQAMaker>

	<Include url="config/bins.xml" />

</config>